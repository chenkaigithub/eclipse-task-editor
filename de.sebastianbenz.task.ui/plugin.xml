      </participant>
   </extension>
   <!-- Custom handlers -->
   <extension
		point="org.eclipse.ui.commands">
		<command
			description="Clear all done tasks."
			id="de.sebastianbenz.task.removedone"
			name="Clear done tasks">
		</command>
		<command
            categoryId="de.sebastianbenz.task.ui.commands.category"
            id="de.sebastianbenz.task.ui.commands.exportHtml"
            name="Export to HTML">
            </command>
		<command	
            categoryId="de.sebastianbenz.task.ui.commands.category"
            id="de.sebastianbenz.task.ui.commands.exportConfluence"
            name="Export to Confluence">
      </command>
      <category
            id="de.sebastianbenz.task.ui.commands.category"
            name="Export">
      </category>
	</extension>
 <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="de.sebastianbenz.task.removedone">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="de.sebastianbenz.task.Task.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="de.sebastianbenz.task.ui.commands.exportHtml">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="de.sebastianbenz.task.Task.Editor.opened">
                	</reference>
