                    definitionId="de.sebastianbenz.task.Task.Editor.opened">
                </reference>
            </activeWhen>
        </handler>        
    </extension>  
       <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.sebastianbenz.task.removedone"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+R">
      </key>
      <key
            commandId="de.sebastianbenz.task.ui.commands.exportHtml"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="de.sebastianbenz.task.ui.commands.exportConfluence"
