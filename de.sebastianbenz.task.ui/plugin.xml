	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="de.sebastianbenz.task.ui.TaskExecutableExtensionFactory:de.sebastianbenz.task.ui.handlers.RemoveDoneTasks"
            commandId="de.sebastianbenz.task.removedone">
            <activeWhen>
                <reference
                    definitionId="de.sebastianbenz.task.Task.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
		<handler
              class="de.sebastianbenz.task.ui.TaskExecutableExtensionFactory:de.sebastianbenz.task.ui.handlers.HtmlExportHandler"
              commandId="de.sebastianbenz.task.ui.commands.exportHtml">
