                    definitionId="de.sebastianbenz.task.Task.Editor.opened">
                </reference>
            </activeWhen>
        </handler>        
        <handler
              class="de.sebastianbenz.task.ui.TaskExecutableExtensionFactory:de.sebastianbenz.task.ui.handlers.ConfluenceExportHandler"
